var createLoop = require('raf-loop')
var loop = createLoop()
var test = require('tape').test

test("can attach tick events", function(t) {
    t.plan(6)
    var count = 0
    console.log('Background')
    
    loop.on('tick', (dt) => {
        t.equal(typeof dt, 'number', 'iteration')
        count++
        console.log('random variable', Math.random(1, 5))
        
        if (count>=5) {
            loop.stop()
            console.log('STOP')
        }
    });
    loop.start()
})
