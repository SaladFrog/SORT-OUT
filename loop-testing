var loop = require('raf-loop');
var test = require('tape').test
var engine = loop();
test("loops expected number of times", function(t) {
    t.plan(3)
    var count = 0

    // var engine = loop(function(dt) {
    engine.on('tick', (dt) => {
        t.equal(typeof dt, 'number', 'iteration')
        count++
        if (count>=3)
          engine.stop()
    }).start()
})
